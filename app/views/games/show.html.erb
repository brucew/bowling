<h2>Current Score: <%= @game.score %></h2>
<div>
  <%= button_to '+New Shot', shots_path %>

</div>

<div>
  <% @game.frames.each do |frame| %>
    <div>
      <h3><%= frame.score %></h3>
      <% frame.shots.each do |shot| %>
        <%= shot.score %>
      <% end %>

    </div>

  <% end %>
</div>
